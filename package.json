{
  "name": "progbot",
  "author": "TeamBN",
  "license": "Unlicense",
  "description": "TeamBN's progbot",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeamBattleNet/ProgBot.git"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "start-dev": "yarn build && LOG_LEVEL=debug node dist/index.js",
    "build": "rm -rf dist/ && tsc",
    "lint": "eslint --ext .ts --format unix src/ && prettier --check 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent c8 --reporter=text mocha -r ts-node/register --color 'src/**/*.spec.ts' --exit",
    "test:docker": "docker build . -f test.Dockerfile -t progbot-testing-container && docker run -it progbot-testing-container",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "yarn build && yarn typeorm:cli migration:run -d dist/clients/database",
    "migration:generate": "yarn typeorm:cli migration:generate -d dist/clients/database",
    "clean": "rm -rf dist/ coverage/"
  },
  "dependencies": {
    "@twurple/api": "^6.0.6",
    "@twurple/auth": "^6.0.6",
    "@twurple/chat": "^6.0.6",
    "@twurple/pubsub": "^6.0.6",
    "better-sqlite3": "^8.1.0",
    "bufferutil": "^4.0.7",
    "chalk": "^4.1.2",
    "discord.js": "^14.7.1",
    "express": "^4.18.2",
    "got": "^11.8.6",
    "loglevel": "^1.8.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "source-map-support": "^0.5.21",
    "tslib": "^2.5.0",
    "typeorm": "0.3.12",
    "utf-8-validate": "^6.0.3",
    "uuid": "^9.0.0"
  },
  "resolutions": {
    "discord-api-types": "0.37.20"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.6",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "prettier": "^2.8.4",
    "proxyquire": "^2.1.3",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  },
  "c8": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.d.ts"
    ],
    "all": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 180
  }
}
