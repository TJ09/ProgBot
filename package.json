{
  "name": "progbot",
  "author": "TeamBN",
  "license": "Unlicense",
  "description": "TeamBN's progbot",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeamBattleNet/ProgBot.git"
  },
  "engines": {
    "node": ">=14.5.0"
  },
  "scripts": {
    "start-dev": "yarn build && LOG_LEVEL=debug node dist/index.js",
    "build": "rm -rf dist/ && tsc",
    "lint": "eslint --ext .ts --format unix src/ && prettier --check 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "NODE_ENV=test TS_NODE_FILES=true LOG_LEVEL=silent nyc --reporter=text mocha -r ts-node/register --color 'src/**/*.spec.ts' --exit",
    "test:docker": "docker build . -f test.Dockerfile -t progbot-testing-container && docker run -it progbot-testing-container",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "yarn build && yarn typeorm:cli migration:run",
    "migration:generate": "yarn typeorm:cli migration:generate",
    "clean": "rm -rf dist/ .nyc_output/",
    "check-outdated": "check-outdated --ignore-pre-releases"
  },
  "dependencies": {
    "better-sqlite3": "^7.1.1",
    "bufferutil": "^4.0.2",
    "chalk": "^4.1.0",
    "discord.js": "^12.4.1",
    "erlpack": "discord/erlpack",
    "express": "^4.17.1",
    "loglevel": "^1.7.0",
    "loglevel-plugin-prefix": "^0.8.4",
    "source-map-support": "^0.5.19",
    "tslib": "^2.0.3",
    "twitch-auth": "^4.3.0",
    "twitch-chat-client": "^4.3.0",
    "typeorm": "^0.2.29",
    "utf-8-validate": "^5.0.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.9",
    "@types/sinon": "^9.0.8",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "chai": "^4.2.0",
    "check-outdated": "^2.4.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "mocha": "^8.2.1",
    "mock-fs": "^4.13.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "sinon": "^9.2.1",
    "ts-node": "^9.0.0",
    "twitch": "^4.3.0",
    "typescript": "^4.1.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "all": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 180
  }
}
