{
  "name": "progbot",
  "author": "TeamBN",
  "license": "Unlicense",
  "description": "TeamBN's progbot",
  "version": "2.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeamBattleNet/ProgBot.git"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "start-dev": "yarn build && LOG_LEVEL=debug node dist/index.js",
    "build": "rm -rf dist/ && tsc",
    "lint": "eslint --ext .ts --format unix src/ && prettier --check '{src/**/*.ts,vitest.config.ts}'",
    "format": "prettier --write '{src/**/*.ts,vitest.config.ts}'",
    "test": "vitest run --coverage",
    "test:docker": "docker build . -f test.Dockerfile -t progbot-testing-container && docker run -it progbot-testing-container",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "yarn build && yarn typeorm:cli migration:run -d dist/clients/database",
    "migration:generate": "yarn typeorm:cli migration:generate -d dist/clients/database",
    "clean": "rm -rf dist/ coverage/"
  },
  "dependencies": {
    "@twurple/api": "^7.0.10",
    "@twurple/auth": "^7.0.10",
    "@twurple/chat": "^7.0.10",
    "@twurple/pubsub": "^7.0.10",
    "better-sqlite3": "^9.4.1",
    "bufferutil": "^4.0.8",
    "chalk": "^5.3.0",
    "discord.js": "^14.14.1",
    "express": "^4.18.2",
    "got": "^14.2.0",
    "loglevel": "^1.9.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "source-map-support": "^0.5.21",
    "tslib": "^2.6.2",
    "typeorm": "0.3.20",
    "utf-8-validate": "^6.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.4.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitest/coverage-v8": "^1.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "memfs": "^4.7.6",
    "prettier": "^3.2.5",
    "typescript": "5.3.3",
    "unplugin-swc": "^1.4.4",
    "vitest": "^1.3.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "browser": false,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "max-len": [
        "error",
        {
          "code": 200
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 180
  }
}
